<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- Enable proxy and URL rewrite -->
    <rewrite>
      <rules>
        <!-- Proxy /api/* requests to Container Apps -->
        <rule name="ReverseProxyToContainerApps" stopProcessing="true">
          <match url="^api/(.*)" />
          <conditions>
            <add input="{REQUEST_METHOD}" pattern="^(GET|POST|PUT|DELETE|PATCH|OPTIONS)$" />
          </conditions>
          <action type="Rewrite" 
                  url="https://well-intake-api.salmonsmoke-78b2d936.eastus.azurecontainerapps.io/{R:1}{QUERY_STRING}" 
                  appendQueryString="false" />
        </rule>
        
        <!-- Proxy /proxy/* requests to Container Apps -->
        <rule name="ProxyEndpoints" stopProcessing="true">
          <match url="^proxy/(.*)" />
          <action type="Rewrite" 
                  url="https://well-intake-api.salmonsmoke-78b2d936.eastus.azurecontainerapps.io/{R:1}{QUERY_STRING}" 
                  appendQueryString="false" />
        </rule>
        
        <!-- Proxy manifest.xml for Outlook Add-in -->
        <rule name="ProxyManifest" stopProcessing="true">
          <match url="^manifest.xml$" />
          <action type="Rewrite" 
                  url="https://well-intake-api.salmonsmoke-78b2d936.eastus.azurecontainerapps.io/manifest.xml" />
        </rule>
        
        <!-- Proxy static files for Outlook Add-in -->
        <rule name="ProxyStatic" stopProcessing="true">
          <match url="^static/(.*)" />
          <action type="Rewrite" 
                  url="https://well-intake-api.salmonsmoke-78b2d936.eastus.azurecontainerapps.io/static/{R:1}" />
        </rule>
      </rules>
      
      <outboundRules>
        <!-- Preserve original host in response headers -->
        <rule name="PreserveHost">
          <match serverVariable="RESPONSE_X_Original_Host" pattern=".*" />
          <action type="Rewrite" value="{HTTP_HOST}" />
        </rule>
      </outboundRules>
    </rewrite>
    
    <!-- Add custom headers -->
    <httpProtocol>
      <customHeaders>
        <!-- Security headers -->
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        
        <!-- CORS headers for API -->
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, X-API-Key, Authorization" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Application Request Routing settings -->
    <applicationRequestRouting>
      <proxy enabled="true" preserveHostHeader="false" reverseRewriteHostInResponseHeaders="false" />
    </applicationRequestRouting>
    
    <!-- Handler for Python app -->
    <handlers>
      <add name="PythonHandler" 
           path="*" 
           verb="*" 
           modules="FastCgiModule" 
           scriptProcessor="D:\home\python364x64\python.exe|D:\home\site\wwwroot\wfastcgi.py" 
           resourceType="Unspecified" 
           requireAccess="Script" />
    </handlers>
  </system.webServer>
  
  <!-- App settings -->
  <appSettings>
    <add key="WSGI_HANDLER" value="oauth_app_with_proxy.app" />
    <add key="PYTHONPATH" value="D:\home\site\wwwroot" />
    <add key="WSGI_LOG" value="D:\home\LogFiles\wfastcgi.log" />
  </appSettings>
</configuration>